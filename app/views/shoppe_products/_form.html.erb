<%= simple_form_for(@shoppe_product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :parent_id %>
    <%= f.input :name %>
    <%= f.input :sku %>
    <%= f.input :permalink %>
    <%= f.input :description %>
    <%= f.input :short_description %>
    <%= f.input :active %>
    <%= f.input :weight %>
    <%= f.input :price %>
    <%= f.input :cost_price %>
    <%= f.input :tax_rate_id %>
    <%= f.input :featured %>
    <%= f.input :in_the_box %>
    <%= f.input :stock_control %>
    <%= f.input :default %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
